sudo: false

language: android

android:
  components:
  - platform-tools
  - tools

before_install:
- chmod +x gradlew

script:
- "./gradlew clean build nearby-receiver -PdisablePreDex --stacktrace"

notifications:
  email: true

before_cache:
- rm -f $HOME/.gradle/caches/modules-2/modules-2.lock

cache:
  directories:
  - "$HOME/.m2"
  - "$HOME/.gradle"
  - "$HOME/.gradle/caches/"
  - "$HOME/.gradle/wrapper/"
